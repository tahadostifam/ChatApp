require 'colorize'
require './src/database_handler.rb'
require_relative './table_initializer.rb'

user_command = ARGV[0].to_s.strip

def putsHelp
    puts "bin/console help".blue
    puts "bin/console clear".blue
    puts "bin/console init_table <table_name>".magenta
end

if user_command.length == 0
    putsHelp
else
    case user_command
    when 'init_table'
        user_param = ARGV[1].to_s.strip
        if user_param.length == 0
            putsHelp
        else
            init_table(user_param)
        end
    when 'help'
        putsHelp
    else 'clear'
        puts `clear`.strip
    end
end